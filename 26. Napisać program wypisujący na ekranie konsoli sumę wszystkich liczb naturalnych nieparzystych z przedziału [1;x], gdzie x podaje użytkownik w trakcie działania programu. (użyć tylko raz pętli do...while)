namespace _26
{
    class Program
    {
        static void Main(string[] args)
        {
            /*26. Napisać program wypisujący na ekranie konsoli sumę wszystkich liczb naturalnych nieparzystych z przedziału [1;x], 
            gdzie x podaje użytkownik w trakcie działania programu. (użyć tylko raz pętli do...while)*/

            int a;
            int b = 0;
            int l = 1;

            Console.WriteLine("Podaj liczbe do obliczenai sumy liczb");
            a = Convert.ToInt32(Console.ReadLine());

            do
            {
                if (l%2 != 1)
                {


                    b = b + l;

                    l++;
                }
            } while (l <= a);
            Console.WriteLine(b);

            Console.ReadKey();
        }
    }
}

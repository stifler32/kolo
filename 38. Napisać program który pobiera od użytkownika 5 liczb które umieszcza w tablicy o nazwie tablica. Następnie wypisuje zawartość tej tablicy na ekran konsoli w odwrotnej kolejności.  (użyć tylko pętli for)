namespace _38
{
    class Program
    {
        static void Main(string[] args)
        {
            /*38. Napisać program który pobiera od użytkownika 5 liczb które umieszcza w tablicy o nazwie tablica. 
            Następnie wypisuje zawartość tej tablicy na ekran konsoli w odwrotnej kolejności.  (użyć tylko pętli for)*/
            int[] tab = new int[5];

            Console.WriteLine("Podaj 5 liczb mości panie");
            for (int i = 0; i < 5; i++)
            {
                tab[i] = Convert.ToInt32(Console.ReadLine());

            }
            Console.WriteLine("Wypisywanie elementów tablicy:");
            for (int i = 4; i >= 0; i--)
            {
                Console.WriteLine(tab[i]);

            }
            Console.ReadKey();
        }
    }
    

}

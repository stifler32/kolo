namespace _16
{
    class Program
    {
        static void Main(string[] args)
        {
            //16. Napisać program wczytujący z klawiatury liczbę całkowitą i wypisujący na ekran konsoli informację o jej parzystości.  
            int a;
            Console.WriteLine("Podaj liczbę do sprawdzenia parzystości");
            a = Convert.ToInt32(Console.ReadLine());
            if(a%2==0)
                Console.WriteLine("Liczba jest parzysta");
            else
                Console.WriteLine("Liczba nie jest parzysta");
            Console.ReadKey();

        }
    }

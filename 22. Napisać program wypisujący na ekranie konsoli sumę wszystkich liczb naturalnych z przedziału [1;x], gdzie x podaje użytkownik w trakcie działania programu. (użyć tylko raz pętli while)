namespace _22
{
    class Program
    {
        static void Main(string[] args)
        {
            //22. Napisać program wypisujący na ekranie konsoli sumę wszystkich liczb naturalnych z przedziału [1;x], 
            //gdzie x podaje użytkownik w trakcie działania programu. (użyć tylko raz pętli while)

            int a;
            int b = 0;
            int l = 1;

            Console.WriteLine("Podaj liczbe do obliczenai sumy liczb");
            a = Convert.ToInt32(Console.ReadLine());

            while (l <= a)
            { 
                b = b + l;
                l++;
            }
            Console.WriteLine(b);

            Console.ReadKey();
        }
    }
}
